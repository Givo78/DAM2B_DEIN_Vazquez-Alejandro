<Window x:Class="ProyectoFigma.Configuracion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuración"
        Height="500"
        Width="350"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <Style x:Key="ConfigOptionButton" TargetType="Button">
            <Setter Property="Background" Value="#FFFDE4B0"/>
            <Setter Property="Foreground" Value="#FF7A3C00"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="15" >
                            <ContentPresenter VerticalAlignment="Center" Margin="15,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF6C26A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFDB9C3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="30" Background="#FFF">
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFD9345" Offset="0"/>
                    <GradientStop Color="#FFE46300" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <StackPanel Margin="20">
                <TextBlock Text="Configuración" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#FF7A3C00" 
                           Margin="0,0,0,20"/>

                <Button Style="{StaticResource ConfigOptionButton}" Content="Cambiar a modo oscuro" />
                <Button Style="{StaticResource ConfigOptionButton}" Content="Perfil" />
                <Button Style="{StaticResource ConfigOptionButton}" Content="Notificaciones" />
                <Button Style="{StaticResource ConfigOptionButton}" Content="Contactos" />
                <Button Style="{StaticResource ConfigOptionButton}" Content="Accesibilidad" />
                <Button Style="{StaticResource ConfigOptionButton}" Content="Privacidad y seguridad" />
                <Button Style="{StaticResource ConfigOptionButton}" Content="Centro de ayuda" />
                <Button Style="{StaticResource ConfigOptionButton}" Content="Preferencias de anuncios" />
                <Button Style="{StaticResource ConfigOptionButton}" Content="Cerrar sesión" Click="cerrar_sesion"/>
            </StackPanel>

            <Button Content="✕" 
                    Width="35" Height="35" 
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#FF7A3C00"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="10"
                    Click="Cerrar_Click"/>
        </Grid>
    </Border>
</Window>
