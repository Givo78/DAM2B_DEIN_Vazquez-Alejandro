<Window x:Class="ProyectoFigma.Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Principal"
        Height="600"
        Width="350"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Border CornerRadius="30" Background="#FFF">
        <Grid>
            <!-- Fondo degradado -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFD9345" Offset="0"/>
                    <GradientStop Color="#FFE46300" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Dividimos la ventana en 2 filas: header y feed -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Feed -->
            </Grid.RowDefinitions>

            <!-- HEADER FIJO ARRIBA -->
            <Grid Grid.Row="0" Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <!-- Icono menú (3 rayas) -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"
                    MouseLeftButtonUp="AbrirConfiguracion_Click">
                    <Rectangle Height="3" Width="25" Fill="White" Margin="0,2"/>
                    <Rectangle Height="3" Width="25" Fill="White" Margin="0,2"/>
                    <Rectangle Height="3" Width="25" Fill="White" Margin="0,2"/>
                </StackPanel>


                <!-- Opciones (Cerca de ti / Caminar / Necesitas coche) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Cerca de ti"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="10,0"
                               Cursor="Hand"
                               MouseLeftButtonUp="CercaDeTi_Click"/>

                    <TextBlock Text="Caminar"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="10,0"
                               Cursor="Hand"
                               MouseLeftButtonUp="Caminar_Click"/>

                    <TextBlock Text="Necesitas coche"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="10,0"
                               Cursor="Hand"
                               MouseLeftButtonUp="NecesitasCoche_Click"/>
                </StackPanel>
            </Grid>

            <!-- FEED ABAJO -->
            <ScrollViewer Grid.Row="1"
                          Margin="20,0,20,20"
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel x:Name="FeedPanel"/>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
