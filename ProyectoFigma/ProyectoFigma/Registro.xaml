<Window x:Class="ProyectoFigma.Registro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro"
        Height="300" Width="281"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Border CornerRadius="30" Background="#FFF">
        <StackPanel Margin="20">
            <TextBlock Text="Registrar nuevo usuario" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="#FF7A3C00"/>
            <TextBox x:Name="txtUsuario" Margin="0,0,0,10"/>
            <PasswordBox x:Name="txtContraseña"  Margin="0,0,0,20"/>
            <Button Content="Registrar" Height="30" Click="Registrar_Click" Background="#FFFDE4B0" Foreground="#FF7A3C00" BorderThickness="0" FontWeight="Bold" Cursor="Hand"/>
            <Button Content="Cancelar" Height="30" Margin="0,10,0,0" Click="Cancelar_Click" Background="Transparent" Foreground="#FF7A3C00" BorderThickness="0" FontWeight="Bold" Cursor="Hand"/>
        </StackPanel>
    </Border>
</Window>
